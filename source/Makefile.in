SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source
OBJECT        = ..

default: library

include $(OBJECT)/config/Makefile.config

SUBDIRS = toolbox hierarchy transfer patchdata mathops mesh \
	  geometry solvers algorithm apputils  

library:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
lib1d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
lib2d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
lib3d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
libXd:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
clean:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
