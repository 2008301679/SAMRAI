SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/patchdata/templates
OBJECT        = ../../..

default: library

include $(OBJECT)/config/Makefile.config


SUBDIRS = automaticXd automaticNond

library:
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done
