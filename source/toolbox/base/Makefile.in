SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/toolbox/base
VPATH	      =	@srcdir@
OBJECT        = ../../..

default: library

include $(OBJECT)/config/Makefile.config

library:	lib1d lib2d lib3d

OBJS	      = IEEE.o List.o	                                \
		ParallelBuffer.o PIO.o		                \
		SAMRAIManager.o ShutdownRegistry.o 		\
		Tracer.o Utilities.o	                        \
	        MathUtilities.o

lib1d:		$(OBJS)
lib2d:		$(OBJS)
lib3d:		$(OBJS)
libXd:		$(OBJS)

clean:
	$(SAMCLEAN)

include $(SRCDIR)/Makefile.depend
