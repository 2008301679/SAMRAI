SAMRAI	      = @top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/toolbox/memory
VPATH	      =	@srcdir@
OBJECT        = ../../..

default: library

include $(OBJECT)/config/Makefile.config

library:	lib1d lib2d lib3d

OBJS	      = Arena.o ArenaManager.o Array.o		\
		DescribedClass.o			\
                ConstPointer.o ConstPointerBase.o	\
		FixedArena.o MemoryUtilities.o		\
		Pointer.o PointerBase.o			\
                ReferenceCounter.o ScratchArena.o	\
                StandardArena.o

lib1d:		$(OBJS)
lib2d:		$(OBJS)
lib3d:		$(OBJS)
libXd:		$(OBJS)

clean:
	$(SAMCLEAN)

include $(SRCDIR)/Makefile.depend
