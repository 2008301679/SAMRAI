SAMRAI	      = @top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/toolbox/stream
VPATH	      =	@srcdir@
OBJECT        = ../../..

default: library

include $(OBJECT)/config/Makefile.config

library:	lib1d lib2d lib3d

OBJS	      = AbstractStream.o FileStream.o \
		MessageStream.o XDRStream.o 

lib1d:		$(OBJS)
lib2d:		$(OBJS)
lib3d:		$(OBJS)
libXd:		$(OBJS)

clean:
	$(SAMCLEAN)

include $(SRCDIR)/Makefile.depend
