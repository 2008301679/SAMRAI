SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/hierarchy/templates/special
VPATH	      =	@srcdir@
OBJECT        = ../../../..

default: library

include $(OBJECT)/config/Makefile.config

library:	lib1d lib2d lib3d

OBJS	      = stl-LayerNode-NDIM$(NDIM).o stl-LayerNodeSet-NDIM$(NDIM).o
lib1d:
	$(MAKE) NDIM=1 libXd
lib2d:
	$(MAKE) NDIM=2 libXd
lib3d:
	$(MAKE) NDIM=3 libXd
libXd:		$(OBJS)

clean:
	$(SAMCLEAN)

include $(SRCDIR)/Makefile.depend
