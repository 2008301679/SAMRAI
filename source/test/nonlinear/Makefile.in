TEST_NPROCS = @TEST_NPROCS@ 

check:
		$(MAKE) check2d
		$(MAKE) check3d

check2d:	main2d
		$(OBJECT)/config/serpa-run $(TEST_NPROCS) \
			./main2d 2d.petsc.input;
		$(OBJECT)/config/serpa-run $(TEST_NPROCS) \
			./main2d 2d.kinsol.input; \

# Disable check3d from test, because it takes too long.
# It can be run using check3dx
check3d:	main3d

