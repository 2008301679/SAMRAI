	flux2d.o grad2d.o init2d.o stable2d.o stufprobc2d.o trace2d.o \
	trace1d2d.o

main:	$(OBJS)

clean:
	$(CLEAN_COMMON_TEST_FILES)

#include $(SRCDIR)/Makefile.depend

