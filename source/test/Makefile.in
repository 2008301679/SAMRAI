SAMRAI	      = @top_srcdir@
SRCDIR        = @srcdir@
OBJECT        = ../..
SUBDIR        = source/test

SUBDIRS = async_comm \
	applications boundary communication clustering dataops dataaccess \
	dlbg emb_bdry FAC hierarchy hypre ieee inputdb HDF5 locally_active \
	mblkcomm nonlinear patchbdrysum pointer pvode schedules timers \
	variables vector

default: check	

include $(OBJECT)/config/Makefile.config

library:
lib1d:
lib2d:
lib3d:
libXd:

check:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@); done

check2d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@); done

check3d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@); done

clean:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@); done
