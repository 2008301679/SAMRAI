SAMRAI	      = @top_srcdir@
SRCDIR        = @srcdir@
SUBDIR        = source/test/FAC
VPATH         = @srcdir@
OBJECT        = ../../..

#LDFLAGS_EXTRA= --link_command_prefix "/usr/local/bin/purify4.5 -best-effort"

default: check	

include $(OBJECT)/config/Makefile.config

CPPFLAGS_EXTRA= -DNDIM=$(PDIM) -DTESTING=1

CXX_OBJS      = main.o ABRTest.o SinusoidalFrontTagger.o MDA_Access_instances.o intToString.o get-input-filename.o
CXX_OBJS      = main.o AdaptivePoisson.o \
		get-input-filename.o \
		arrayConversion-double.o \
		MDA_Access-double.o \
		MDA_Access-int.o \
		printObject.o \
		patchFcns.o \
		setArrayData.o \
		SinusoidFcn.o \
		GaussianFcn.o \
		QuarticFcn.o \
		PoissonSineSolution.o \
		PoissonGaussianDiffcoefSolution.o \
		PoissonGaussianSolution.o \
		PoissonMultigaussianSolution.o \
		PoissonPolynomialSolution.o

main2d:
		if test -f stamp-3d; then $(MAKE) clean-check; fi
		touch stamp-2d
		$(MAKE) PDIM=2 main-2d

main-2d:	$(CXX_OBJS) $(LIBSAMRAIDEPEND)
		$(CXX) $(CXXFLAGS) $(LDFLAGS) $(CXX_OBJS)	\
		$(LIBSAMRAI2D) $(LIBSAMRAI) $(LDLIBS) -o main2d

main3d:
		if test -f stamp-2d; then $(MAKE) clean-check; fi
		touch stamp-3d
		$(MAKE) PDIM=3 main-3d

main-3d:	$(CXX_OBJS) $(LIBSAMRAIDEPEND)
		$(CXX) $(CXXFLAGS) $(LDFLAGS) $(CXX_OBJS)	\
		$(LIBSAMRAI3D) $(LIBSAMRAI) $(LDLIBS) -o main3d

TEST_NPROCS = @TEST_NPROCS@ 

check:		
		$(MAKE) check2d
		$(MAKE) check3d

check2d:	main2d
		@for i in $(SRCDIR)/*2d.input ; do	\
		  $(OBJECT)/config/serpa-run $(TEST_NPROCS) \
			./main2d $${i};	\
		done

check3d:	main3d
		@for i in $(SRCDIR)/*3d.input ; do	\
		  $(OBJECT)/config/serpa-run $(TEST_NPROCS) \
			./main3d $${i};	\
		done

clean-check:
		$(SAMCLEAN)

clean:
		$(SAMCLEAN)
		$(RM) *.f *main* 
		$(RM) -rf restart-*d*

include $(SRCDIR)/Makefile.depend
