SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/SAMRAI
OBJECT        = ../..

default: library

include $(OBJECT)/config/Makefile.config

SUBDIRS = tbox hier xfer pdat math mesh geom solv algs appu

library:
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done
clean:
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

