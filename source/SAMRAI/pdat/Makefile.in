library: $(OBJS) $(F_OBJS)
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

clean:
	$(CLEAN_COMMON_LIB_FILES)
	$(RM) *.f
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

include $(SRCDIR)/Makefile.depend

M4DIRS = -DFORTDIR=$(SRCDIR)/fortran $(SAMRAI_M4_FLAGS)

pdat_concoarsen1d.o : fortran/pdat_concoarsen1d.m4
	$(M4) $(M4DIRS) $(SRCDIR)/fortran/pdat_concoarsen1d.m4 > pdat_concoarsen1d.f
	$(F77) $(FFLAGS) -c pdat_concoarsen1d.f -o $@

