	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
lib3d:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
libXd:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
